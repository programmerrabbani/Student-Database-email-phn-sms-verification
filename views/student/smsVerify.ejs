<section class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <a class="btn btn-primary" href="/student">Back to Home</a>
                <br>
                <br>
                <div class="card mt-2">
                    <div class="card-body">
                        <h4 class="text-center"> Hello
                            <%= name %> Please Verify Your Identity</h4>
                        <hr>
                        <p class="text-center  text-uppercase">OTP CODE Sent . Please Verify Your Phone Number </p>
                        <form action="/student/student_verify/<%= id %>" method="post">
                            <div class="mb-3">
                                <label for="OTP" class="form-label">OTP</label>
                                <input name="OTP" type="text" class="form-control" id="OTP" placeholder="1234">
                            </div>
                            <div class="mb-3">
                                <input class="btn btn-primary w-100" type="submit" value="SUBMIT">
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>