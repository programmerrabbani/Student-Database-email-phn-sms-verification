<section class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <a class="btn btn-primary" href="/student">Back to Home</a>
                <br>
                <br>
                <div class="card mt-2">
                    <div class="card-body">
                        <h4 class="text-center"> Hello
                            <%= name %>, Please Verify Your Identity</h4>
                        <hr>
                        <p class="text-center  text-uppercase">Email Already Sent Please Check you Mail Inbox...</p>
                        <hr>
                        <p class="text-center text-uppercase">OR</p>
                        <hr>
                        <p class="text-center text-uppercase">OTP CODE Sent Please Verify Your Phone Number </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<% if (name) { %>
    <script>
        Swal.fire({
            position: 'top-center',
            icon: 'success',
            title: 'Your Profile has been success',
            showConfirmButton: false,
            timer: 1500
        })
    </script>
    <% } else { %>
        <script>
            Swal.fire({
                position: 'top-center',
                icon: 'error',
                title: 'Please try to again!',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
        <% } %>